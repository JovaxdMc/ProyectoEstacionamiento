<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuUsers2"
    android:background="#1E1E1E">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/loginlogo"
            android:layout_marginLeft="130dp"
            />

        <TextView
            android:id="@+id/btnSalir"
            android:gravity="center"
            android:layout_width="55dp"
            android:layout_height="60dp"
            android:text="X"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:textSize="50dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Espacios Dispnibles:"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="200dp"/>

            <TextView
                android:gravity="center"
                android:id="@+id/cantidadLugares"
                android:background="@drawable/boton2"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:hint="0"
                android:textColorHint="@color/white"
                android:layout_marginTop="200dp"
                android:layout_marginLeft="5dp"/>




        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bienvenido: "
            android:id="@+id/usrDatos"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/btnQr"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/qr2"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="300dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qr"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="420dp"/>


        <ImageView
            android:id="@+id/btnPanico"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/panico"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="500dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="630dp"
            android:text="Boton de panico"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="25dp"/>




    </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>